<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>10</defaultcontrol>
	<!-- 1.13 DialogMediaSource.xml
ID 	Type 		Description
2 	label 		Heading label
10 	container 	List of added media sources
11 	button 		Browse for location button
12 	edit 		Button for entering the name for the selected source
13 	button 		Add new source button
14 	button 		Delete source button
18 	button 		OK button
19 	button 		Cancel button (unused)  
-->
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<!-- default group -->
		<control type="group">
			<!--#######################################################################   MENU DA ESQUERDA   #######################################################################-->
			<animation effect="slide" start="1900,0" end="0,0" time="1000" tween="cubic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="1900,0" time="1000" tween="cubic" easing="out">WindowClose</animation>
			<animation effect="slide" start="900,0" end="0,0" time="1000" tween="cubic" easing="out">Visible</animation>
			<animation effect="fade" start="100" end="0" time="400">Hidden</animation>
			<control type="image">
				<texture>dialog-bg.png</texture>
			</control>
			<control type="image">
				<left>100</left>
				<top>148</top>
				<width>860</width>
				<height>90</height>
				<texture>colors/grey.png</texture>
				<animation effect="fade" start="100" end="50" time="0" condition="Control.HasFocus(10)">conditional</animation>
				<animation effect="fade" start="100" end="50" time="0" condition="Control.HasFocus(11)">conditional</animation>
				<animation effect="fade" start="100" end="50" time="0" condition="Control.HasFocus(12)">conditional</animation>
				<animation effect="fade" start="100" end="50" time="0" condition="Control.HasFocus(13)">conditional</animation>
				<animation effect="fade" start="100" end="50" time="0" condition="Control.HasFocus(14)">conditional</animation>
				<animation effect="fade" start="100" end="50" time="0" condition="Control.HasFocus(19)">conditional</animation>
			</control>
			<!-- Common List -->
			<control type="list" id="10">
				<left>100</left>
				<top>148</top>
				<width>1282</width>
				<height>705</height>
				<onup>12</onup>
				<ondown>12</ondown>
				<onleft/>
				<onright>SetFocus(11)</onright>
				<scrolltime>0</scrolltime>
				<itemlayout height="60">
					<control type="label">
						<left>50</left>
						<top>0</top>
						<width>810</width>
						<height>90</height>
						<font>font30</font>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="60">
					<control type="label">
						<left>50</left>
						<top>0</top>
						<width>810</width>
						<height>90</height>
						<font>font30</font>
						<aligny>center</aligny>
						<alignx>center</alignx>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>black</textcolor>
					</control>
				</focusedlayout>
			</control>
			<control type="grouplist" id="9000">
				<left>960</left>
				<top>148</top>
				<!-- Procurar -->
				<control type="button" id="11">
					<include>button_90</include>
					<label>$LOCALIZE[1024]</label>
					<onleft>SetFocus(10)</onleft>
					<onright>SetFocus(10)</onright>
					<width>860</width>
				</control>
				<!-- Add -->
				<control type="button" id="13">
					<include>button_90</include>
					<label>$LOCALIZE[15019]</label>
					<width>860</width>
				</control>
				<!-- Remover -->
				<control type="button" id="14">
					<include>button_90</include>
					<label>$LOCALIZE[1210]</label>
					<width>860</width>
				</control>
				<!-- Cancelar -->
				<control type="button" id="19">
					<include>button_90</include>
					<label>$LOCALIZE[222]</label>
					<align>left</align>
					<width>860</width>
				</control>
				<!-- OK -->
				<control type="button" id="18">
					<include>button_90</include>
					<label>$LOCALIZE[186]</label>
					<onleft>SetFocus(10)</onleft>
					<onright>SetFocus(10)</onright>
					<width>860</width>
				</control>
			</control>
			<!-- Nome -->
			<control type="edit" id="12">
				<left>100</left>
				<top>508</top>
				<width>860</width>
				<height>90</height>
				<font>font30</font>
				<align>center</align>
				<aligny>center</aligny>
				<texturefocus>colors/grey.png</texturefocus>
				<texturenofocus>colors/grey.png</texturenofocus>
				<textcolor>black</textcolor>
				<label/>
				<onup>10</onup>
				<onleft>18</onleft>
				<onright>18</onright>
				<ondown>10</ondown>
			</control>
		</control>
	</controls>
</window>
