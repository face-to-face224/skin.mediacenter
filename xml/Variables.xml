<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<variable name="poster">		
		<value>$INFO[ListItem.Thumb]</value>
	</variable>
	
	<variable name="plot">
		<value condition="![Container.Content(filesmanager) | Container.Content(addons) | Window.IsActive(pictures) | ListItem.IsCollection | Window.IsActive(musicplaylist) | Window.IsActive(music) + [Container.Content(albums) | Container.Content(artists)]]">$INFO[ListItem.Plot]</value>
		<value condition="ListItem.IsCollection">$INFO[Window(home).Property(SkinHelper.ListItem.Plot)]</value>
		<value condition="Container.Content(addons)">$INFO[ListItem.AddonSummary][CR]$INFO[ListItem.AddonDescription]</value>
		<value condition="Container.Content(albums)">$INFO[ListItem.Property(Album_Description)]</value>
		<value condition="Container.Content(artists)">$INFO[ListItem.Property(Artist_Description)]</value>
		<value condition="Container.Content(songs)">$INFO[Window(Home).Property(SkinHelper.Music.Info)]</value>
		<value condition="Container.Content(filesmanager)">$INFO[ListItem.Plot]$INFO[ListItem.Property(Album_Description)]$INFO[ListItem.Property(Artist_Description)]</value>
	</variable>
	
	<variable name="dialogselect_icon">
		<value condition="Control.IsVisible(3) + String.IsEmpty(Container(3).ListItem.Icon) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)]">http://localhost:52307/getthumb&amp;title=$INFO[Container(3).Listitem.Label]</value>
		<value condition="Control.IsVisible(3)">$INFO[Container(3).ListItem.Icon]</value>
		<value condition="Control.IsVisible(6)">$INFO[Container(6).ListItem.Icon]</value>
	</variable>
	
	<variable name="viewdisc">
		<value condition="Player.HasMedia + [Window.IsVisible(fullscreenvideo) | Window.IsVisible(visualisation)] + !String.IsEmpty(Window(home).Property(SkinHelper.Player.Art.DiscArt))">$INFO[Window(Home).Property(SkinHelper.Player.Art.DiscArt)]</value>
		<value condition="Player.HasMedia + [Window.IsVisible(fullscreenvideo) | Window.IsVisible(visualisation)]">$INFO[Player.Art(discart)]</value>
		<value condition="!String.IsEmpty(Window(home).Property(SkinHelper.ListItem.Art.DiscArt))">$INFO[Window(Home).Property(SkinHelper.ListItem.Art.DiscArt)]</value>
		<value>$INFO[ListItem.Art(discart)]</value>		
	</variable>

	<!-- ARTES PARA IMAGENS -->
	<variable name="picdisplay">
		<value>$INFO[ListItem.filenameandpath]</value>
	</variable>
	<variable name="pic_multifanart">
		<value>$INFO[skin.string(picwidget)]</value>
	</variable>
	<variable name="picarts">
		<value>$INFO[skin.string(CustomPicPath)]</value>
	</variable>
	<variable name="icon">		
		<value>$INFO[ListItem.FolderPath,,icon.jpg]</value>	
	</variable>
	<variable name="piclogo">
		<value>$INFO[ListItem.FolderPath,,logo.png]</value>		
	</variable>
	<variable name="piclabel">
		<value>$INFO[skin.string(modelname)]</value>		
	</variable>	
	
	
	<!-- ARTES PARA MUSICAS -->
	<variable name="musicposter">
		<value condition="!String.IsEmpty(ListItem.Thumb)">$INFO[ListItem.Thumb]</value>
		<value>$INFO[Window(Home).Property(SkinHelper.ListItem.Art.Thumb)]</value>
		
	</variable>
	<variable name="musicarts">
		<value>$INFO[skin.string(CustomMusicPath)]</value>
	</variable>
	<variable name="musiclogo">
		<value condition="Control.HasFocus(7004)">$INFO[ListItem.Art(clearlogo)]</value>
		<value condition="Control.HasFocus(50)">$INFO[ListItem.Art(clearlogo)]</value>
		<value condition="!String.IsEmpty(ListItem.Artist)">$VAR[musicarts]$INFO[ListItem.Artist]\logo.png</value>
		<value condition="String.IsEmpty(ListItem.Artist)">$VAR[musicarts]$INFO[Container(812).ListItem.Artist]\logo.png</value>		
	</variable>	
	<variable name="musicbanner">
		<value>$VAR[musicarts]$INFO[Container(812).ListItem.Artist]\banner.jpg</value>
	</variable>
	<variable name="musicfanart">
		<value condition="!String.IsEmpty(ListItem.Art(fanart))">$INFO[ListItem.Art(fanart)]</value>
		<value condition="String.IsEmpty(ListItem.Art(fanart))">$VAR[musicarts]$INFO[Container(812).ListItem.Artist]\fanart.jpg</value>
		<value></value>
	</variable>
	<variable name="musicrepeat">
		<value condition="Playlist.IsRepeatOne">osd/fullscreen/buttons/repeat-one.png</value>
		<value condition="Playlist.IsRepeat">osd/fullscreen/buttons/repeat-all.png</value>
		<value>osd/fullscreen/buttons/repeat-off.png</value>
	</variable>
	<variable name="musicoptionstext">
		<value condition="Control.HasFocus(606)">$LOCALIZE[31033]$INFO[MusicPlayer.UserRating, : ]</value>
		<value condition="Control.HasFocus(607)">$LOCALIZE[486]$INFO[Playlist.Repeat, : ]</value>
		<value condition="Control.HasFocus(608) + Playlist.IsRandom">$LOCALIZE[590]: $LOCALIZE[16041]</value>
		<value condition="Control.HasFocus(608)">$LOCALIZE[590]: $LOCALIZE[16039]</value>
		<value condition="Control.HasFocus(62040)">$LOCALIZE[19033]</value>
		<value condition="Control.HasFocus(62041)">$LOCALIZE[19019]</value>
		<value condition="Control.HasFocus(62042)">$LOCALIZE[19069]</value>
		<value condition="Control.HasFocus(62043)">$LOCALIZE[29900]</value>
		
		<value condition="Control.HasFocus(703)">$LOCALIZE[24013]</value>
		<value condition="Control.HasFocus(5000)">$LOCALIZE[10004]</value>
	</variable>
	
	<variable name="widgetslabel">
		<value condition="Control.HasFocus(7001)">$INFO[skin.string(gamewidgetlabel)]</value>
		<value condition="Control.HasFocus(7002)">$INFO[skin.string(moviewidgetlabel)]</value>
		<value condition="Control.HasFocus(7003)">$INFO[skin.string(showswidgetlabel)]</value>
		<value condition="Control.HasFocus(7004)">$INFO[skin.string(musicwidgetlabel)]</value>
		<value condition="Control.HasFocus(7005)">$INFO[skin.string(picwidgetlabel)]</value>
		<value condition="Control.HasFocus(7012)">$INFO[ListItem.Label]</value>
		<value condition="Control.HasFocus(8001)">$INFO[skin.string(netflixwidgetlabel)]</value>
		<value condition="Control.HasFocus(8003)">$INFO[skin.string(youtubewidgetlabel)]</value>

	</variable>
	
	<!-- ARTES PARA GAMES -->
	<variable name="gamewidget">
		<value>$INFO[skin.string(gamewidget)]</value>
	</variable>
	<variable name="gamesarts">
		<value>$INFO[skin.string(CustomGamesPath)]</value>
	</variable>
	<variable name="gameposter">
		<value condition="!String.IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>
		<value>$INFO[ListItem.Thumb]</value>
	</variable>
	<variable name="gamefanart">
		<value condition="Control.HasFocus(712)">$INFO[Container(712).ListItem.Art(fanart)]</value>	
		<value condition="!String.IsEmpty(ListItem.Art(fanart))">$INFO[ListItem.Art(fanart)]</value>			
	</variable>
	
	<!-- ARTES PARA FILMES/SERIES -->
	<variable name="videoposter">		
		<value condition="!String.IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>		
		<value condition="String.IsEmpty(ListItem.Art(poster)) + ![String.IsEmpty(ListItem.Art(tvshow.poster)) | Container.Content(episodes)]">$INFO[ListItem.Art(tvshow.poster)]</value>
		<value>$INFO[ListItem.Thumb]</value>
	</variable>
	<variable name="videologos">		
		<value condition="!String.IsEmpty(ListItem.Art(clearart))">$INFO[(ListItem.Art(clearart)]</value>
		<value condition="!String.IsEmpty(ListItem.Art(clearlogo))">$INFO[ListItem.Art(clearlogo)]</value>	
		<value condition="!String.IsEmpty(Window(home).Property(SkinHelper.ListItem.Art.ClearArt))">$INFO[Window(home).Property(SkinHelper.ListItem.Art.ClearArt)]</value>
		<value condition="!String.IsEmpty(Window(home).Property(SkinHelper.ListItem.Art.ClearLogo))">$INFO[Window(home).Property(SkinHelper.ListItem.Art.ClearLogo)]</value>		
	</variable>
	<variable name="videofanart">
		<value condition="Control.HasFocus(512)">$INFO[Container(512).ListItem.Art(fanart)]</value>	
		<value condition="!String.IsEmpty(ListItem.Art(fanart))">$INFO[ListItem.Art(fanart)]</value>			
	</variable>
	
	<!-- LOGOS PARA WIDGETS DA HOME -->
	<variable name="homelogo">		
		<value condition="Container(9000).HasFocus(701)">$INFO[ListItem.Art(clearlogo)]</value>
		<value condition="Container(9000).HasFocus(702)">$INFO[ListItem.Art(clearlogo)]</value>
		<value condition="Container(9000).HasFocus(703)">$INFO[ListItem.Art(clearlogo)]</value>
		<!-- <value condition="Container(9000).HasFocus(704)">$INFO[ListItem.Art(clearlogo)]</value> -->
		<value condition="Container(9000).HasFocus(705)">$VAR[piclogo]</value>
		<value condition="Container(9000).HasFocus(706)">$VAR[musiclogo]</value>
		<value condition="Container(9000).HasFocus(707)">$VAR[musiclogo]</value>
	</variable>
	
	<!-- FANARTS PARA WIDETS DA HOME -->
	<variable name="homefanart">
		<!-- <value condition="Control.HasFocus(9000)">special://skin/backgrounds/$INFO[ListItem.Property(id)].jpg</value> -->
		<value condition="Container(9000).HasFocus(701)">$INFO[ListItem.Art(fanart)]</value>
		<value condition="Container(9000).HasFocus(702)">$INFO[ListItem.Art(fanart)]</value>
		<value condition="Container(9000).HasFocus(703)">$INFO[ListItem.Art(fanart)]</value>
		<value condition="Container(9000).HasFocus(704)">$INFO[ListItem.Art(fanart)]</value>		
		<value condition="Container(9000).HasFocus(705)">$INFO[ListItem.FolderPath]fanart.jpg</value>		
		<value condition="Container(9000).HasFocus(706)">$INFO[ListItem.Art(fanart)]</value>
		<value condition="Container(9000).HasFocus(707)">$INFO[ListItem.Art(fanart)]</value>
		
	</variable>

	<!-- EDITAR -->
	<variable name="librarystatus">
		<value condition="Container(9000).HasFocus(700)">[COLOR=$INFO[skin.string(colorheader)]]$INFO[Window(home).Property(Movies.Count)][/COLOR]$INFO[Window(home).Property(Movies.UnWatched), - $LOCALIZE[16101] ]</value>
		<value condition="Container(9000).HasFocus(702)">[COLOR=$INFO[skin.string(colorheader)]]$INFO[Window(home).Property(Movies.Count)][/COLOR]$INFO[Window(home).Property(Movies.UnWatched), - $LOCALIZE[16101] ]</value>
		<value condition="Container(9000).HasFocus(703)">[COLOR=$INFO[skin.string(colorheader)]]$INFO[Window(home).Property(TVShows.Count)][/COLOR]$INFO[Window(home).Property(Episodes.Count), - $LOCALIZE[20360] ]$INFO[Window(home).Property(Episodes.UnWatched), - $LOCALIZE[16101] ]</value>
		<value condition="String.StartsWith(Container(9000).ListItem.Property(status),concerts)">[COLOR=$INFO[skin.string(colorheader)]]$INFO[Window(home).Property(MusicVideos.Count)][/COLOR]$INFO[Window(home).Property(MusicVideos.UnWatched), - $LOCALIZE[16101] ]</value>
		<value condition="Container(9000).HasFocus(705)">$INFO[Window(home).Property(Music.ArtistsCount),$LOCALIZE[133] ]$INFO[Window(home).Property(Music.AlbumsCount), - $LOCALIZE[132] ]$INFO[Window(home).Property(Music.SongsCount), - $LOCALIZE[182] ]</value>
		<value condition="String.Contains(Container(9000).ListItem.Property(status),playlist)">[COLOR=$INFO[skin.string(colorheader)]]$INFO[Container(9000).ListItem.Property(playlistcount)][/COLOR]$INFO[Container(9000).ListItem.Property(playlistunwatched), -  $LOCALIZE[16101] ]</value>
		<value condition="String.StartsWith(Container(9000).ListItem.Property(status),favourites)">[COLOR=$INFO[skin.string(colorheader)]]$INFO[Window(home).Property(Favourite.Count)][/COLOR]</value>
	</variable>
	
	
</includes>
