							<visible/>
							<left>1400</left>
							<top>765</top>
							<width>1</width>
							<height>300</height>
							<texture>line_h.png</texture>
						</control>
						<control type="image">
							<visible/>
							<left>520</left>
							<top>765</top>
							<width>200</width>
							<height>300</height>
