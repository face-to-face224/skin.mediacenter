						<width>1920</width>
						<height>45</height>
						<texture>shadow_h.png</texture>
						<colordiffuse>F9000000</colordiffuse>
					</control>
					<control type="image">
						<left>0</left>
						<top>750</top>
						<width>1920</width>
						<height>200</height>
						<texture flipy="true" diffuse="shadow_mask.png">shadow_mask_h.png</texture>
						<colordiffuse>F9000000</colordiffuse>
						<animation effect="fade" end="75" condition="true">Conditional</animation>
