							<aspectratio align="left" aligny="top">keep</aspectratio>
						</control>
					</control>
				</control>
			</control>
			<!-- GRUPO DE LISTA -->
			<control type="group">
				<visible>Control.IsVisible(71)</visible>
				<!-- LISTA -->
				<control type="list" id="71">
					<animation effect="fade" time="600" start="0" end="100" easing="inout" tween="cubic">WindowOpen</animation>
					<animation effect="fade" time="600" start="0" end="100" easing="inout" tween="cubic">Visible</animation>
					<animation effect="fade" time="600" start="100" end="0" easing="inout" tween="cubic">WindowClose</animation>
					<animation effect="fade" time="600" start="100" end="0" easing="inout" tween="cubic">Hidden</animation>
					<animation effect="slide" start="0,0" end="45,0" time="300" tween="sine" easing="inout" condition="Control.HasFocus(80)">conditional</animation>
					<viewtype label="SteamGames">List</viewtype>
					<left>0</left>
					<top>10</top>
					<width>960</width>
					<height>725</height>
					<pagecontrol>80</pagecontrol>
					<onleft condition="Control.IsVisible(80)">80</onleft>
					<onleft condition="!Control.IsVisible(80)">9000</onleft>
					<onright condition="Control.IsVisible(712)">712</onright>
					<onright condition="!Control.IsVisible(712)">9000</onright>
					<orientation>vertical</orientation>
					<scrolltime>450</scrolltime>
					<preloaditems>2</preloaditems>
					
					<itemlayout height="45">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>500</width>
							<height>1</height>
							<texture diffuse="shadow_mask_v.png">line_h.png</texture>
						</control>
						<control type="label">
							<left>20</left>
							<top>0</top>
							<width>960</width>
							<height>45</height>
							<font>font30</font>
							<align>left</align>
							<label>$INFO[ListItem.Label]</label>
							<include>labelcolorfocus</include>
						</control>
					</itemlayout>
					<focusedlayout height="45">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>500</width>
							<height>1</height>
							<texture diffuse="shadow_mask_v.png">line_h.png</texture>
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>600</width>
							<height>45</height>
							<texture diffuse="shadow_mask.png">colors/grey.png</texture>
							<animation effect="fade" end="50" condition="true">Conditional</animation>
							<visible>!Control.HasFocus(712)</visible>
							<visible>!Control.HasFocus(80)</visible>
						</control>
						<control type="label">
							<left>20</left>
							<top>0</top>
							<width>960</width>
							<height>45</height>
							<font>font30</font>
							<align>left</align>
							<label>$INFO[ListItem.Label]</label>
							<scroll>true</scroll>
							<include>labelcolorfocus</include>
						</control>
					</focusedlayout>
				</control>
				<!-- WIDGETS -->
				<control type="list" id="712">
					<animation effect="slide" time="400" start="0,0" end="0,-390" easing="inout" tween="cubic">Focus</animation>
					<animation effect="slide" time="400" start="0,-390" end="0,0" easing="inout" tween="cubic">UnFocus</animation>
					<visible>Container.HasFolders(71)</visible>
					<left>515</left>
					<top>1150</top>
					<width>1405</width>
					<height>320</height>
					<onup>71</onup>
					<ondown>9000</ondown>
					<orientation>horizontal</orientation>
					<viewtype>icon</viewtype>
					<content target="games" sortby="random" limit="7">$INFO[Container(71).ListItem.FolderPath]</content>
					<itemlayout width="200" height="250">
						<control type="group">
							<control type="image">
								<top>4</top>
								<left>14</left>
								<width>167</width>
								<height>250</height>
								<aspectratio aligny="top">keep</aspectratio>
								<animation effect="fade" end="50" condition="true">Conditional</animation>
								<texture fallback="defaultgame_poster.png" background="true">$VAR[poster]</texture>
								<bordertexture border="-4">black.png</bordertexture>
							</control>
						</control>
					</itemlayout>
					<focusedlayout width="200" height="250">
						<control type="group">
							<control type="image">
								<top>4</top>
								<left>4</left>
								<width>200</width>
								<height>292</height>
								<aspectratio align="left" aligny="top">keep</aspectratio>
								<texture fallback="defaultgame_poster.png" background="true">$VAR[poster]</texture>
								<bordertexture border="-4">white.png</bordertexture>
								<visible>Control.HasFocus(712)</visible>
							</control>
							<control type="image">
								<top>4</top>
								<left>4</left>
								<width>167</width>
								<height>250</height>
								<aspectratio aligny="top">keep</aspectratio>
								<animation effect="fade" end="50" condition="true">Conditional</animation>
								<texture fallback="defaultgame_poster.png" background="true">$VAR[poster]</texture>
								<bordertexture border="-4">black.png</bordertexture>
								<visible>!Control.HasFocus(712)</visible>
							</control>
						</control>
					</focusedlayout>
				</control>
				<!-- DETALHES E PLOT -->
				<control type="group" id="717">
					<animation effect="slide" time="400" start="0,500" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
					<animation effect="slide" time="400" start="0,500" end="0,0" easing="inout" tween="cubic">Visible</animation>
					<animation effect="slide" time="400" start="0,0" end="0,500" easing="inout" tween="cubic">WindowClose</animation>
