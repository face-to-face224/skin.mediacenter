					</control>
					<!-- TEXTO & IMAGENS DO RODAPÃ‰ -->
					<control type="textbox">
						<animation effect="slide" time="400" start="-600,0" end="0,0" easing="inout" tween="cubic">Visible</animation>
						<animation effect="slide" time="400" start="0,0" end="-600,0" easing="inout" tween="cubic">Hidden</animation>
						<left>20</left>
						<top>990</top>
						<width>460</width>
						<height>90</height>
						<font>font30</font>
						<align>center</align>
						<label>$INFO[Container(712).ListItem.Label]</label>
						<visible>Control.HasFocus(712)</visible>
					</control>
					<control type="image">
						<left>499</left>
						<top>765</top>
						<width>1</width>
						<height>300</height>
						<texture>line_h.png</texture>
					</control>
					<control type="group">
						<visible>!Control.HasFocus(712)</visible>
						<animation effect="slide" time="400" start="0,500" end="0,0" easing="inout" tween="cubic">Visible</animation>
						<animation effect="slide" time="400" start="0,0" end="0,500" easing="inout" tween="cubic">Hidden</animation>
