					<control type="image">
						<left>21</left>
						<centertop>50%</centertop>
						<width>60</width>
						<height>60</height>
						<texture colordiffuse="grey">$VAR[BasicListWatchedIconVar]</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="image">
						<right>20</right>
						<centertop>50%</centertop>
						<bottom>0</bottom>
						<align>right</align>
						<width>32</width>
						<height>32</height>
						<texture colordiffuse="grey">$INFO[ListItem.Overlay]</texture>
					</control>
				</focusedlayout>
			</control>
		</definition>
	</include>
</includes>
