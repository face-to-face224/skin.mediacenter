					<control type="image">
						<left>21</left>
						<centertop>50%</centertop>
						<width>60</width>
						<height>60</height>
						<texture colordiffuse="grey">$VAR[BasicListWatchedIconVar]</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="image">
						<right>20</right>
						<centertop>50%</centertop>
						<bottom>0</bottom>
						<align>right</align>
						<width>32</width>
						<height>32</height>
						<texture colordiffuse="grey">$INFO[ListItem.Overlay]</texture>
					</control>
				</itemlayout>
				<focusedlayout height="list_item_height">
					<control type="image">
						<left>0</left>
						<right>0</right>
						<top>0</top>
						<bottom>0</bottom>
						<texture colordiffuse="button_focus">lists/focus.png</texture>
						<visible>Control.HasFocus($PARAM[list_id])</visible>
					</control>
					<control type="label">
						<left>100</left>
						<right>70</right>
						<bottom>0</bottom>
						<aligny>center</aligny>
						<font>font27</font>
						<label>$INFO[ListItem.Property(name),] $INFO[ListItem.Label]</label>
						<shadowcolor>text_shadow</shadowcolor>
						<scroll>true</scroll>
					</control>
