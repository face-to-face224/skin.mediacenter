<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- By Sagrath -->
	<include name="viewsoptions">
		<control type="button" id="2">
			<description>Alterar Vista</description>
			<include>button_90</include>
			<label/>
		</control>
		<control type="button" id="3">
			<description>Ordenar</description>
			<include>button_90</include>
			<label/>
		</control>
		<control type="togglebutton" id="4">
			<description>Ordenar</description>
			<include>button_90</include>
			<label>Ordem: Ascendente</label>
			<altlabel>Ordem: Descendente</altlabel>
		</control>
		<control type="button" id="6">
			<include>button_90</include>
			<label>Slideshow</label>
			<visible>Window.IsActive(pictures)</visible>
		</control>
		<control type="button" id="7">
			<include>button_90</include>
			<label>Recursive Slideshow</label>
			<visible>Window.IsActive(pictures)</visible>
		</control>
		<control type="radiobutton" id="9">
			<include>button_90</include>
			<include>onoffbutton</include>
			<label>Random Slideshow</label>
			<visible>Window.IsActive(pictures)</visible>
		</control>
		<control type="button" id="20">
			<include>button_90</include>
			<label>Update Library</label>
			<visible>Window.IsActive(music)</visible>
		</control>
		<control type="button" id="621">
			<description>Get more</description>
			<include>button_90</include>
			<label>$LOCALIZE[21452]</label>
			<onclick>ActivateWindow(addonbrowser,addons://more/game/,return)</onclick>
			<visible>Container.Content(addons)</visible>
		</control>
		<control type="button" id="624">
			<include>button_90</include>
			<label>$LOCALIZE[10140]</label>
			<onclick>Addon.OpenSettings($INFO[Container.PluginName])</onclick>
			<visible>!String.IsEmpty(Container.PluginName)</visible>
		</control>
		<control type="button" id="625">
			<include>button_90</include>
			<label>Extrafanarts:</label>
			<label2>$VAR[gamesarts]</label2>
			<onclick>Skin.SetPath(CustomGamesPath)</onclick>
			<visible>Window.IsActive(games)</visible>
		</control>
		<control type="button" id="626">
			<include>button_90</include>
			<label>$VAR[picarts]</label>
			<onclick>Skin.SetPath(CustomPicPath)</onclick>
			<visible>Window.IsActive(pictures)</visible>
		</control>
		<control type="button" id="627">
			<include>button_90</include>
			<label>$VAR[musicarts]</label>
			<onclick>Skin.SetPath(CustomMusicPath)</onclick>
			<visible>Window.IsActive(Music)</visible>
		</control>
	</include>
	
	<include name="viewsoptionsbackground">
		<control type="image">
			<visible>Skin.HasSetting(clearbackground)</visible>
			<texture>base-clear.jpg</texture>
		</control>
		<control type="image">
			<visible>Skin.HasSetting(darkbackground)</visible>
			<texture>base-dark.jpg</texture>
		</control>
		<control type="image">
			<texture>shadow_v.png</texture>
		</control>
		<control type="image">
			<texture flipx="true">shadow_v.png</texture>
		</control>
	</include>
</includes>
