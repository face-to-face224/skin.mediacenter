<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">450</defaultcontrol>
	<onunload>RunScript(script.favourites)</onunload>
	<!-- 	1.11 DialogFavourites.xml
ID 		Type 		Description
450 	container 	List of available favourites 
 -->
	<controls>
		<control type="image">
			<top>0</top>
			<left>0</left>
			<width>1920</width>
			<height>1080</height>
			<texture background="true">special://skin/backgrounds/favourites.jpg</texture>
			<aspectratio>stretch</aspectratio>
			<fadetime>450</fadetime>
		</control>
		<include>basicviewpanel</include>
		<include>myviewslayout</include>
		<!-- ARTES GAMES -->
			<control type="group">
				<visible>Window.IsActive(games)</visible>
				<control type="image">
					<left>50</left>
					<top>100</top>
					<width>860</width>
					<height>600</height>
					<texture fallback="defaultgame_poster.png" background="true">$VAR[gameposter]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<visible>String.IsEmpty(ListItem.Year)</visible>
					<fadetime>450</fadetime>
				</control>
				<control type="image">
					<left>50</left>
					<top>100</top>
					<width>333</width>
					<height>500</height>
					<texture fallback="defaultgame_poster.png" background="true">$VAR[gameposter]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<visible>!String.IsEmpty(ListItem.Year)</visible>
				</control>
				
				<control type="group">
					<top>100</top>
					<left>433</left>
					<width>860</width>
					<include>gamedetails</include>
				</control>
				<control type="textbox">
					<left>50</left>
					<top>750</top>
					<width>860</width>
					<height>254</height>
					<font>font_plot</font>
					<label>$VAR[plot]</label>
					<align>justify</align>
				</control>
				<control type="image">
					<visible>Control.IsVisible(50)</visible>
					<left>960</left>
					<top>700</top>
					<width>960</width>
					<height>310</height>
					<texture>$INFO[ListItem.Art(clearlogo)]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<fadetime>450</fadetime>
				</control>
			</control>
			<!-- ARTES VIDEOS -->
			<control type="group">
				<visible>Window.IsActive(videos)</visible>
				<control type="image">
					<animation effect="slide" delay="3000" start="0,0" end="160,0" time="300" tween="sine" easing="inout" condition="!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.DiscArt))">Conditional</animation>
					<animation effect="rotate" end="-360" center="auto" time="5000" loop="true" reversible="false" condition="!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.DiscArt))">Conditional</animation>
					<left>50</left>
					<top>240</top>
					<width>333</width>
					<height>333</height>
					<texture>$VAR[viewdisc]</texture>
					<aspectratio alignx="right">keep</aspectratio>
					<fadetime>450</fadetime>
				</control>
				<control type="image">
					<left>50</left>
					<top>100</top>
					<width>333</width>
					<height>500</height>
					<texture fallback="defaultvideo.png">$VAR[videoposter]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<fadetime>450</fadetime>
				</control>
				<control type="group">
					<top>100</top>
					<left>433</left>
					<width>860</width>
					<include>videodetails</include>
					<fadetime>450</fadetime>
				</control>
				<control type="textbox">
					<left>50</left>
					<top>750</top>
					<width>860</width>
					<height>254</height>
					<font>font_plot</font>
					<label>$VAR[plot]</label>
					<align>justify</align>
					<fadetime>450</fadetime>
				</control>
				<control type="image">
					<visible>Control.IsVisible(50)</visible>
					<left>960</left>
					<top>700</top>
					<width>960</width>
					<height>310</height>
					<texture>$INFO[ListItem.Art(clearlogo)]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<fadetime>450</fadetime>
				</control>
			</control>
			<!-- ARTES ARTISTAS MUSICAIS -->
			<control type="group">
				<visible>Window.IsActive(music)</visible>
				<control type="image">
					<left>50</left>
					<top>100</top>
					<width>860</width>
					<height>860</height>
					<texture fallback="defaultaudio.png">$VAR[musicposter]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<visible>Container.HasFiles</visible>
					<fadetime>450</fadetime>
				</control>
				<control type="image">
					<animation effect="slide" delay="3000" start="0,0" end="150,0" time="300" tween="sine" easing="inout" condition="!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.DiscArt))">Conditional</animation>
					<animation effect="rotate" end="-360" center="auto" time="5000" loop="true" reversible="false" condition="!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.DiscArt))">Conditional</animation>
					<left>50</left>
					<top>100</top>
					<width>860</width>
					<height>585</height>
					<texture>$VAR[viewdisc]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<fadetime>450</fadetime>
				</control>
				<control type="image">
					<animation effect="slide" delay="3000" start="0,0" end="-140,0" time="300" tween="sine" easing="inout" condition="!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.DiscArt))">Conditional</animation>
					<left>50</left>
					<top>100</top>
					<width>860</width>
					<height>585</height>
					<texture fallback="defaultaudio.png">$VAR[musicposter]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<visible>Container.HasFolders</visible>
					<fadetime>250</fadetime>
				</control>
				<control type="image">
					<visible>Control.IsVisible(50)</visible>
					<left>960</left>
					<top>700</top>
					<width>960</width>
					<height>310</height>
					<texture>$VAR[musiclogo]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<fadetime>450</fadetime>
				</control>
				<control type="group">
					<visible>Control.IsVisible(50)</visible>
					<top>700</top>
					<left>50</left>
					<width>860</width>
					<include>musicdetails</include>
				</control>
			</control>
			<!-- ARTES PICTURES -->
			<control type="group">
				<control type="image" id="9230">
					<top>100</top>
					<left>50</left>
					<width>860</width>
					<height>907</height>
					<fadetime>450</fadetime>
					<texture>$VAR[picdisplay]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="image" id="9230">
					<top>100</top>
					<left>50</left>
					<width>860</width>
					<height>907</height>
					<fadetime>450</fadetime>
					<texture fallback="defaultpicture.png">$VAR[picposter]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="image">
					<visible>Control.IsVisible(50)</visible>
					<left>960</left>
					<top>700</top>
					<width>960</width>
					<height>310</height>
					<texture>$VAR[piclogo]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<fadetime>450</fadetime>
				</control>
			</control>
			
		<!-- LISTA -->
		<control type="list" id="450">
			<viewtype label="fAVORITOS">list</viewtype>
			<left>960</left>
			<top>100</top>
			<width>1410</width>
			<height>585</height>
			<pagecontrol>80</pagecontrol>
			<onleft>9000</onleft>
			<onright>80</onright>
			<orientation>vertical</orientation>
			<scrolltime>450</scrolltime>
			<preloaditems>2</preloaditems>
			<focusposition>1</focusposition>
			<itemlayout height="45">
				<control type="image">
					<left>20</left>
					<top>0</top>
					<width>960</width>
					<height>1</height>
					<texture diffuse="shadow_mask.png">line_h.png</texture>
				</control>
				<control type="label">
					<left>20</left>
					<top>0</top>
					<width>960</width>
					<height>45</height>
					<font>font30</font>
					<align>left</align>
					<label>$INFO[ListItem.Label]</label>
					<include>labelcolor</include>
				</control>
			</itemlayout>
			<focusedlayout height="45">
				<control type="image">
					<left>20</left>
					<top>0</top>
					<width>960</width>
					<height>1</height>
					<texture diffuse="shadow_mask_v.png">line_h.png</texture>
				</control>
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>960</width>
					<height>45</height>
					<texture diffuse="shadow_mask.png">colors/grey.png</texture>
					<animation effect="fade" end="65" condition="true">Conditional</animation>
				</control>
				<control type="label">
					<left>20</left>
					<top>0</top>
					<width>960</width>
					<height>45</height>
					<font>font30</font>
					<align>left</align>
					<label>$INFO[ListItem.Label]</label>
					<include>labelcolorfocus</include>
					<scroll>true</scroll>
				</control>
			</focusedlayout>
		</control>
		<!-- SCROLLBAR -->
		<control type="scrollbar" id="80">
			<include>scrollbar_vertical</include>
			<animation effect="slide" start="0,0" end="-45,0" time="300" tween="sine" easing="inout" condition="Control.HasFocus(80)">conditional</animation>
			<right>-50</right>
			<top>100</top>
			<height>585</height>
			<onleft>50</onleft>
			<onright>9000</onright>
			<visible>true</visible>
		</control>
		<include>viewarch</include>
	</controls>
</window>
