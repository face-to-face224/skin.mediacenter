<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- MediaCenter 2020 -->
	<!-- ARTES PARA IMAGENS -->
	<!-- #################### BLUR BACKGROUND - ListItem.FolderPath #################### -->
	<include name="picsblur">
		<control type="group">
			<!-- Colorbox Daemon -->
			<control type="image">
				<top>0</top>
				<left>0</left>
				<width>1920</width>
				<height>1080</height>
				<texture>$INFO[ListItem.FolderPath,,fanart.jpg]</texture>
				<fadetime>450</fadetime>
			</control>
			<control type="multiimage" id="7975">
				<left>-2160</left>
				<width>1</width>
				<height>1</height>
				<imagepath background="true">$INFO[ListItem.FolderPath,,fanart.jpg]</imagepath>
				<visible>System.HasAddon(script.colorbox)</visible>
			</control>
			<!-- Background Fanart -->
			<control type="image">
				<width>1920</width>
				<height>1080</height>
				<fadetime>100</fadetime>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<texture>$INFO[ListItem.FolderPath,,fanart.jpg]</texture>
			</control>
			<!-- Colorbox Blur Image -->
			<control type="image">
				<width>1920</width>
				<height>1080</height>
				<fadetime>100</fadetime>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<texture diffuse="background-diffuse.png">$INFO[Window(home).Property(ImageFilterFIVE)]</texture>
				<visible>Control.HasFocus(612)</visible>
			</control>
		</control>
	</include>
	<include name="piclogo">
		<control type="group">
			<control type="image" id="9229">
				<left>550</left>
				<top>430</top>
				<width>1420</width>
				<height>310</height>
				<texture>$INFO[ListItem.FolderPath,,logo.png]</texture>
				<aspectratio align="left" aligny="bottom">keep</aspectratio>
				<visible>!Control.HasFocus(612)</visible>
				<visible>!String.IsEmpty(Control.GetLabel(9229))</visible>
				<animation effect="slide" time="400" start="0,-705" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
				<animation effect="slide" time="400" start="0,-705" end="0,0" easing="inout" tween="cubic">Visible</animation>
				<animation effect="slide" time="400" start="0,-705" end="0,0" easing="inout" tween="cubic">WindowClose</animation>
				<animation effect="slide" time="400" start="0,0" end="0,-705" easing="inout" tween="cubic">Hidden</animation>
			</control>
			<control type="image">
				<top>15</top>
				<left>500</left>
				<width>1470</width>
				<height>690</height>
				<texture>$INFO[Container(612).ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
				<visible>Control.HasFocus(612)</visible>
				<fadetime>450</fadetime>
				<animation effect="slide" time="400" start="0,-705" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
				<animation effect="slide" time="400" start="0,-705" end="0,0" easing="inout" tween="cubic">Visible</animation>
				<animation effect="slide" time="400" start="0,0" end="0,-705" easing="inout" tween="cubic">WindowClose</animation>
				<animation effect="slide" time="400" start="0,0" end="0,-705" easing="inout" tween="cubic">Hidden</animation>
			</control>
			<control type="image">
				<right>0</right>
				<bottom>0</bottom>
				<width>800</width>
				<height>310</height>
				<texture>$INFO[ListItem.Path,,logo.png]</texture>
				<aspectratio align="center" aligny="bottom">keep</aspectratio>
				<visible>String.IsEmpty(ListItem.FolderPath,,logo.png)</visible>
			</control>
		</control>
	</include>
	<include name="picbackground">
		<control type="group">
			<control type="image">
				<bottom>0</bottom>
				<left>0</left>
				<width>1920</width>
				<height>1080</height>
				<texture>$VAR[picbackfanart]</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<left>0</left>
				<width>1920</width>
				<height>1080</height>
				<texture>$VAR[picfanart]</texture>
				<aspectratio>stretch</aspectratio>
			</control>
		</control>
	</include>
	<!-- By Sagrath -->
</includes>
