	<controls>
		<control type="group">
			<control type="image">
				<left>620</left>
				<top>660</top>
				<width>1</width>
				<height>440</height>
				<texture>line_v.png</texture>
				<fadetime>350</fadetime>
				<colordiffuse/>
			</control>
			<control type="multiimage">
				<left>0</left>
				<top>0</top>
				<width>1920</width>
				<height>1080</height>
				<imagepath>$VAR[musicarts]$INFO[MusicPlayer.Artist]\extrafanart\</imagepath>
				<fadetime>350</fadetime>
				<colordiffuse/>
			</control>
			<include>myviewslayout</include>
			<include>basicviewpanel</include>
			<control type="image">
				<left>620</left>
				<top>660</top>
				<width>1</width>
				<height>440</height>
				<texture>line_v.png</texture>
				<fadetime>350</fadetime>
				<colordiffuse/>
			</control>
			<control type="image">
				<left>1240</left>
				<top>660</top>
				<width>1</width>
				<height>440</height>
				<texture>line_v.png</texture>
				<fadetime>350</fadetime>
				<colordiffuse/>
			</control>
			<control type="group">
				<animation effect="slide" delay="3000" start="0,0" end="200,0" time="300" tween="sine" easing="inout">WindowOpen</animation>
				<animation effect="rotate" end="-360" center="auto" time="5000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				<left>20</left>
				<top>660</top>
				<width>400</width>
				<height>400</height>
				<control type="image" id="99">
					<texture>$INFO[Player.Folderpath]disc.png</texture>
					<fadetime>450</fadetime>
				</control>
				<control type="image">
					<visible>String.IsEmpty(Control.GetLabel(99))</visible>
					<texture>disc.png</texture>
					<fadetime>450</fadetime>
				</control>
				<control type="textbox">
					<visible>String.IsEmpty(Control.GetLabel(99))</visible>
					<left>50</left>
					<width>300</width>
					<height>200</height>
					<font>custom_disc</font>
					<label>$INFO[MusicPlayer.Artist]</label>
					<textcolor>black</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<fadetime>450</fadetime>
				</control>
				<control type="textbox">
					<visible>String.IsEmpty(Control.GetLabel(99))</visible>
					<left>50</left>
					<top>200</top>
					<width>300</width>
					<height>200</height>
					<font>custom_disc</font>
					<label>$INFO[MusicPlayer.Title]</label>
					<textcolor>blue</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<fadetime>450</fadetime>
				</control>
			</control>
			<control type="image">
				<left>20</left>
				<top>660</top>
				<width>400</width>
				<height>400</height>
				<texture fallback="defaultaudio.png">$INFO[MusicPlayer.Cover]</texture>
				<fadetime>450</fadetime>
			</control>
			<control type="image" id="98">
				<left>640</left>
				<top>660</top>
				<width>580</width>
				<height>225</height>
				<align>center</align>
				<aligny>center</aligny>
				<texture>$VAR[musicarts]$INFO[MusicPlayer.Artist]\logo.png</texture>
				<aspectratio>keep</aspectratio>
				<fadetime>450</fadetime>
			</control>
			<control type="textbox">
				<!-- <visible>String.IsEmpty(Control.GetLabel(98))</visible> -->
				<left>640</left>
				<top>660</top>
				<width>580</width>
				<height>225</height>
				<font>home80</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[MusicPlayer.Artist]</label>
				<fadetime>450</fadetime>
			</control>
			<control type="label">
				<left>640</left>
				<top>900</top>
				<width>1200</width>
				<height>45</height>
				<font>home_time</font>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>[COLOR=orange]$INFO[MusicPlayer.TrackNumber].[/COLOR] $INFO[MusicPlayer.Title]</label>
				<fadetime>450</fadetime>
			</control>
			<control type="label">
				<left>640</left>
				<top>950</top>
				<width>1200</width>
				<height>45</height>
				<font>home_time</font>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[MusicPlayer.Year] - $INFO[MusicPlayer.Album] - $INFO[MusicPlayer.Genre]</label>
				<fadetime>450</fadetime>
			</control>
			
			<control type="progress" id="12">
				<description>My first progress control</description>
				<left>640</left>
				<top>1000</top>
				<width>1240</width>
				<height>50</height>
				<visible>true</visible>
				<reveal>false</reveal>
				<texturebg>progressbar/progress_back.png</texturebg>
				<lefttexture>mydowntexture.png</lefttexture>
				<midtexture>progressbar/progress_mid.png</midtexture>
				<righttexture>myrighttexture.png</righttexture>
				<overlaytexture>myoverlaytexture.png</overlaytexture>
				<info>Player.Progress</info>
			</control>
			<control type="label">
				<left>640</left>
				<top>1000</top>
				<width>1240</width>
				<height>45</height>
				<font>home_time</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[MusicPlayer.Duration] : $INFO[MusicPlayer.TimeRemaining]</label>
				<fadetime>450</fadetime>
			</control>
		</control>
	</controls>
</window>
