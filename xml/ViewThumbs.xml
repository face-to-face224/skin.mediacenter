				</control>
			</control>
			<!-- ARTES VIDEOS -->
			<control type="group">
				<visible>Window.IsActive(videos)</visible>
				<control type="image">
					<animation effect="slide" delay="3000" start="0,0" end="160,0" time="300" tween="sine" easing="inout" condition="!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.DiscArt))">Conditional</animation>
					<animation effect="rotate" end="-360" center="auto" time="5000" loop="true" reversible="false" condition="!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.DiscArt))">Conditional</animation>
					<left>50</left>
					<top>240</top>
					<width>333</width>
					<height>333</height>
					<texture>$VAR[viewdisc]</texture>
					<aspectratio alignx="right">keep</aspectratio>
					<fadetime>450</fadetime>
				</control>
				<control type="image">
					<left>50</left>
					<top>100</top>
					<width>333</width>
					<height>500</height>
					<texture fallback="defaultvideo.png">$VAR[videoposter]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<visible>!String.IsEmpty(ListItem.Year)</visible>
					<fadetime>450</fadetime>
				</control>
				<control type="image">
					<left>50</left>
					<top>100</top>
					<width>860</width>
					<height>600</height>
					<texture fallback="defaultvideo.png">$VAR[videoposter]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<visible>String.IsEmpty(ListItem.Year)</visible>
					<fadetime>450</fadetime>
				</control>
				<control type="group">
					<top>100</top>
					<left>433</left>
					<width>860</width>
					<include>videodetails</include>
					<fadetime>450</fadetime>
				</control>
				<control type="textbox">
					<left>50</left>
					<top>750</top>
					<width>860</width>
					<height>254</height>
					<font>font_plot</font>
					<label>$VAR[plot]</label>
					<align>justify</align>
					<fadetime>450</fadetime>
				</control>
				<control type="image">
					<visible>Control.IsVisible(91)</visible>
					<left>960</left>
					<top>700</top>
					<width>960</width>
					<height>310</height>
					<texture>$INFO[ListItem.Art(clearlogo)]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<fadetime>450</fadetime>
				</control>
			</control>
			<!-- ARTES ARTISTAS MUSICAIS -->
			<control type="group">
				<visible>Window.IsActive(music)</visible>
				<control type="image">
					<left>50</left>
					<top>100</top>
					<width>860</width>
					<height>860</height>
					<texture fallback="defaultaudio.png">$VAR[musicposter]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<visible>Container.HasFiles</visible>
					<fadetime>450</fadetime>
				</control>
				<control type="image">
					<animation effect="slide" delay="3000" start="0,0" end="150,0" time="300" tween="sine" easing="inout" condition="!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.DiscArt))">Conditional</animation>
					<animation effect="rotate" end="-360" center="auto" time="5000" loop="true" reversible="false" condition="!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.DiscArt))">Conditional</animation>
					<left>50</left>
					<top>100</top>
					<width>860</width>
					<height>585</height>
					<texture>$VAR[viewdisc]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<fadetime>450</fadetime>
				</control>
				<control type="image">
					<animation effect="slide" delay="3000" start="0,0" end="-140,0" time="300" tween="sine" easing="inout" condition="!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.DiscArt))">Conditional</animation>
					<left>50</left>
					<top>100</top>
					<width>860</width>
					<height>585</height>
					<texture fallback="defaultaudio.png">$VAR[musicposter]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<visible>Container.HasFolders</visible>
					<fadetime>250</fadetime>
				</control>
				<control type="image">
					<visible>Control.IsVisible(91)</visible>
					<left>960</left>
					<top>700</top>
					<width>960</width>
					<height>310</height>
					<texture>$VAR[musiclogo]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<fadetime>450</fadetime>
				</control>
				<control type="group">
					<visible>Control.IsVisible(91)</visible>
					<top>700</top>
					<left>50</left>
					<width>860</width>
					<include>musicdetails</include>
				</control>
			</control>
			<!-- ARTES PICTURES -->
			<control type="group">
				<visible>Window.IsActive(pictures)</visible>
				<control type="image" id="9230">
					<top>15</top>
					<left>1100</left>
					<width>800</width>
					<height>907</height>
					<fadetime>450</fadetime>
					<texture>$VAR[picdisplay]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="image">
					<visible>Control.IsVisible(91)</visible>
					<left>1100</left>
					<top>700</top>
					<width>800</width>
					<height>310</height>
					<texture>$VAR[piclogo]</texture>
					<aspectratio aligny="top">keep</aspectratio>
					<fadetime>450</fadetime>
				</control>
			</control>
			<!-- LISTA -->
			<control type="panel" id="91">
				<viewtype label="Thumbs">panel</viewtype>
				<left>50</left>
				<top>15</top>
				<width>1000</width>
				<height>1000</height>
				<pagecontrol>80</pagecontrol>
				<onright>9000</onright>
				<onleft condition="Control.IsVisible(80)">80</onleft>
				<onleft condition="!Control.IsVisible(80)">9000</onleft>
				<onleft>80</onleft>
				<orientation>vertical</orientation>
				<scrolltime>450</scrolltime>
				<preloaditems>0</preloaditems>
				<focusposition>0</focusposition>
				<!-- PICTURES -->
				<itemlayout condition="Window.IsActive(pictures)" height="250" width="250">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>240</width>
						<height>240</height>
						<texture fallback="defaultpicture.png">$VAR[picposter]</texture>
						<aspectratio>keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout condition="Window.IsActive(pictures)" height="250" width="250">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>240</width>
						<height>240</height>
						<texture fallback="defaultpicture.png">$VAR[picposter]</texture>
						<aspectratio>keep</aspectratio>
						<bordertexture border="5">colors\black.png</bordertexture>
						<bordersize>5</bordersize>
					</control>
				</focusedlayout>
				<itemlayout condition="Window.IsActive(Games)" height="250" width="250">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>240</width>
						<height>240</height>
						<texture fallback="defaultpicture.png">$VAR[gameposter]</texture>
						<aspectratio>keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout condition="Window.IsActive(Games)" height="250" width="250">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>240</width>
						<height>240</height>
						<texture fallback="defaultpicture.png">$VAR[gameposter]</texture>
						<aspectratio>keep</aspectratio>
						<bordertexture border="5">colors\black.png</bordertexture>
						<bordersize>5</bordersize>
					</control>
				</focusedlayout>
			</control>
			<include>viewarch</include>
			<!-- SCROLLBAR -->
			<control type="scrollbar" id="80">
				<include>scrollbar_vertical</include>
				<animation effect="slide" start="0,0" end="50,0" time="300" tween="sine" easing="inout" condition="Control.HasFocus(80)">conditional</animation>
				<left>-50</left>
				<top>100</top>
				<height>585</height>
				<onright>50</onright>
				<onleft>9000</onleft>
				<visible>true</visible>
			</control>
		</control>
	</include>
</includes>
