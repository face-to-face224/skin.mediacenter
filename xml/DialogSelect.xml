<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3</defaultcontrol>
	<!-- 1.25 DialogSelect.xml
ID 	Type 		Description
1 	label 		Heading label
2 	label 		Number of items in the list
3 	container 	List of available options
5 	button 		Manual/Get More... button
6 	container 	List of available add-ons
7 	button 		Cancel button
11 	container 	List with game video thumbnails
12 	textbox 	Description of the currently-selected video filter 
-->
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<!-- default group -->
		<control type="group">
			<!--#######################################################################   MENU DA DIREITA   #######################################################################-->
			<control type="group">
			<visible>![Window.IsActive(gamestretchmode) | Window.IsActive(gamevideofilter) | Window.IsActive(gamevideorotation)]</visible>
				<animation effect="slide" start="1900,0" end="0,0" time="1000" tween="cubic" easing="out">WindowOpen</animation>
				<animation effect="slide" start="0,0" end="1900,0" time="1000" tween="cubic" easing="out">WindowClose</animation>
				<animation effect="slvide" start="900,0" end="0,0" time="1000" tween="cubic" easing="out">Visible</animation>
				<animation effect="fade" start="100" end="0" time="400">Hidden</animation>
				<control type="image">
					<texture>dialog-bg.png</texture>
				</control>
				<control type="image">
					<right>100</right>
					<top>100</top>
					<width>540</width>
					<height>540</height>
					<fadetime>450</fadetime>
					<texture background="true">$VAR[dialogselect_icon]</texture>
					<aspectratio aligny="bottom">keep</aspectratio>
					<bordertexture border="-2">black.png</bordertexture>
				</control>
				<control type="textbox">
					<left>1278</left>
					<top>694</top>
					<width>506</width>
					<height>262</height>
					<font>font30</font>
					<align>justify</align>
					<label>$INFO[Container(6).ListItem.AddonDescription][CR]$INFO[Container(6).ListItem.Label2]</label>
					<autoscroll delay="8000" time="2000" repeat="8000">!Skin.HasSetting(noallowscroll)</autoscroll>
				</control>
				<control type="image">
					<right>100</right>
					<top>650</top>
					<width>540</width>
					<height>540</height>
					<fadetime>450</fadetime>
					<texture flipy="true" diffuse="thumb_reflect.png" background="true">$VAR[dialogselect_icon]</texture>
					<aspectratio aligny="top">keep</aspectratio>
				</control>
				<control type="image">
					<left>100</left>
					<top>100</top>
					<width>1180</width>
					<height>90</height>
					<texture>colors/grey.png</texture>
					<animation effect="fade" end="20" condition="true">conditional</animation>
				</control>
				<!-- header label -->
				<control type="label" id="1">
					<left>150</left>
					<top>125</top>
					<width>1156</width>
					<height>90</height>
					<font>font30</font>
				</control>
				<!-- Common List -->
				<control type="list" id="3">
					<viewtype label="31801">list</viewtype>
					<left>100</left>
					<top>248</top>
					<width>1282</width>
					<height>705</height>
					<pagecontrol>80</pagecontrol>
					<onleft>80</onleft>
					<onright>5</onright>
					<onup>3</onup>
					<ondown>3</ondown>
					<orientation>vertical</orientation>
					<scrolltime>450</scrolltime>
					<preloaditems>2</preloaditems>
					<itemlayout height="60">
						<control type="image">
							<left>50</left>
							<top>0</top>
							<width>1100</width>
							<height>1</height>
							<texture>line_h.png</texture>
						</control>
						<control type="label">
							<left>50</left>
							<top>0</top>
							<width>1100</width>
							<height>62</height>
							<font>font30</font>
							<aligny>center</aligny>
							<info>ListItem.Label</info>
							<include>labelcolor</include>
						</control>
					</itemlayout>
					<focusedlayout height="60">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<height>60</height>
							<width>1180</width>
							<texture>colors/grey.png</texture>
							<animation effect="fade" start="100" end="50" time="0" condition="!Control.Hasfocus(3)">conditional</animation>
						</control>
						<control type="label">
							<left>50</left>
							<top>0</top>
							<width>1120</width>
							<height>62</height>
							<font>font30</font>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
							<include>labelcolorfocus</include>
						</control>
					</focusedlayout>
				</control>
				<!-- Addon List -->
				<control type="list" id="6">
					<viewtype label="31801">list</viewtype>
					<left>100</left>
					<top>248</top>
					<width>1282</width>
					<height>705</height>
					<pagecontrol>80</pagecontrol>
					<onleft>80</onleft>
					<onright>5</onright>
					<onup>6</onup>
					<ondown>6</ondown>
					<orientation>vertical</orientation>
					<scrolltime>450</scrolltime>
					<preloaditems>2</preloaditems>
					<animation effect="fade" start="100" end="50" time="200" condition="!Control.HasFocus(6)">Conditional</animation>
					<itemlayout height="98">
						<control type="image">
							<left>50</left>
							<top>96</top>
							<width>1100</width>
							<height>1</height>
							<texture>line_h.png</texture>
						</control>
						<control type="label">
							<left>50</left>
							<top>0</top>
							<width>1120</width>
							<height>62</height>
							<font>font_30</font>
							<aligny>center</aligny>
							<include>listcolor</include>
							<label>$INFO[ListItem.Label]</label>
							<include>labelcolor</include>
						</control>
						<control type="label">
							<left>50</left>
							<top>55</top>
							<height>24</height>
							<width>1120</width>
							<font>font30</font>
							<align>left</align>
							<aligny>center</aligny>
							<include>subcolor</include>
							<label>[COLOR=orange]$LOCALIZE[21864]:[/COLOR] $INFO[ListItem.Label2]</label>
							<visible>String.IsEmpty(ListItem.AddonCreator)</visible>
						</control>
						<control type="label">
							<left>50</left>
							<top>55</top>
							<height>24</height>
							<width>1120</width>
							<font>font30</font>
							<align>left</align>
							<aligny>center</aligny>
							<label>[COLOR=orange]$LOCALIZE[24051][/COLOR][COLOR=white] $INFO[ListItem.AddonVersion] - [COLOR=orange]$LOCALIZE[21863]:[/COLOR] $INFO[ListItem.AddonCreator] - [COLOR=orange]$LOCALIZE[20037]:[/COLOR] $INFO[ListItem.Label2]</label>
							<label2/>
							<visible>!String.IsEmpty(ListItem.AddonCreator)</visible>
						</control>
					</itemlayout>
					<focusedlayout height="98">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>1180</width>
							<height>98</height>
							<texture>colors/grey.png</texture>
							<animation effect="fade" start="100" end="50" time="0" condition="!Control.Hasfocus(6)">conditional</animation>
						</control>
						<control type="label">
							<left>50</left>
							<top>0</top>
							<width>1120</width>
							<height>62</height>
							<font>font30</font>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
							<include>labelcolorfocus</include>
						</control>
						<control type="label">
							<left>50</left>
							<top>55</top>
							<width>1120</width>
							<height>24</height>
							<font>font30</font>
							<align>left</align>
							<aligny>center</aligny>
							<label>[COLOR=orange]$LOCALIZE[21864]:[/COLOR] $INFO[ListItem.Label2]</label>
							<visible>String.IsEmpty(ListItem.AddonCreator)</visible>
						</control>
						<control type="label">
							<left>50</left>
							<top>55</top>
							<width>1120</width>
							<height>24</height>
							<font>font30</font>
							<align>left</align>
							<aligny>center</aligny>
							<label>[COLOR=orange]$LOCALIZE[24051][/COLOR][COLOR=grey] $INFO[ListItem.AddonVersion] - [COLOR=orange]$LOCALIZE[21863]:[/COLOR] $INFO[ListItem.AddonCreator] - [COLOR=orange]$LOCALIZE[20037]:[/COLOR] $INFO[ListItem.Label2]</label>
							<visible>!String.IsEmpty(ListItem.AddonCreator)</visible>
							<shadowcolor>black</shadowcolor>
						</control>
					</focusedlayout>
					<!-- ScrollBar -->
				</control>
				<control type="scrollbar" id="80">
					<include>scrollbar_vertical</include>
					<animation effect="slide" start="0,0" end="50,0" time="300" tween="sine" easing="inout" condition="Control.HasFocus(80)">conditional</animation>
					<left>-50</left>
					<top>40</top>
					<height>660</height>
					<onleft>5</onleft>
					<onright>5</onright>
					<visible>true</visible>
				</control>
				<!-- Manual Button -->
				<control type="button" id="5">
					<left>900</left>
					<top>945</top>
					<width>315</width>
					<height>52</height>
					<label/>
					<texturefocus>colors/grey.png</texturefocus>
					<texturenofocus/>
					<focusedcolor>black</focusedcolor>
					<font>font30</font>
					<align>center</align>
					<aligny>center</aligny>
					<onleft>3</onleft>
					<onright>3</onright>
					<onup>3</onup>
					<ondown>3</ondown>
				</control>
			</control>
			<!--#######################################################################   FILTROS GAMES   #######################################################################-->
			<control type="group">
				<include condition="Window.IsActive(gamevideofilter)">GameDialogSelectFilterLayout</include>
				<include condition="Window.IsActive(gamestretchmode)">GameDialogSelectViewLayout</include>
				<include condition="Window.IsActive(gamevideorotation)">GameDialogSelectViewLayout</include>
			</control>
		</control>
	</controls>
</window>
