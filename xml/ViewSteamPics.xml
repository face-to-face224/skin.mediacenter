<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- VISTA STEAM - ID 61 -->
	<include name="ViewSteamPics">
		<control type="group">
			<animation effect="slide" time="400" start="0,0" end="0,1080" easing="inout" tween="cubic" condition="Control.HasFocus(9009)">conditional</animation>
			<visible>Control.IsVisible(61)</visible>
			<!-- SOMBRA INFERIOR -->
			<control type="group">
				<include>piclogo</include>
				<control type="image" id="9230">
					<top>0</top>
					<left>500</left>
					<width>1420</width>
					<height>1027</height>
					<fadetime>450</fadetime>
					<texture>$VAR[picdisplay]</texture>
					<aspectratio>keep</aspectratio>
				</control>
			</control>
			<include>viewarch</include>
			<control type="group">
				<animation effect="slide" time="400" start="-500,0" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
				<animation effect="slide" time="400" start="-500,0" end="0,0" easing="inout" tween="cubic">Visible</animation>
				<animation effect="slide" time="400" start="0,0" end="-500,0" easing="inout" tween="cubic">WindowClose</animation>
				<animation effect="slide" time="400" start="0,0" end="-500,0" easing="inout" tween="cubic">Hidden</animation>
				<control type="image">
					<bottom>50</bottom>
					<left>500</left>
					<width>45</width>
					<height>1030</height>
					<texture>shadow_v.png</texture>
				</control>
				<control type="image">
					<bottom>50</bottom>
					<right>1420</right>
					<width>960</width>
					<height>1030</height>
					<texture flipx="true">shadow_v.png</texture>
				</control>
			</control>
			<control type="group">
				<!-- LISTA -->
				<control type="list" id="61">
					<animation effect="slide" time="400" start="-450,0" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
					<animation effect="slide" time="400" start="-450,0" end="0,0" easing="inout" tween="cubic">Visible</animation>
					<animation effect="slide" time="400" start="0,0" end="-450,0" easing="inout" tween="cubic">WindowClose</animation>
					<animation effect="slide" time="400" start="0,0" end="-450,0" easing="inout" tween="cubic">Hidden</animation>
					<viewtype label="SteamPics">List</viewtype>
					<left>0</left>
					<top>0</top>
					<width>500</width>
					<height>1020</height>
					<pagecontrol>80</pagecontrol>
					<onleft condition="Control.IsVisible(80)">80</onleft>
					<onleft condition="!Control.IsVisible(80)">9000</onleft>
					<onright condition="Control.IsVisible(612)">612</onright>
					<onright condition="!Control.IsVisible(612)">9000</onright>
					<orientation>vertical</orientation>
					<scrolltime>450</scrolltime>
					<preloaditems>2</preloaditems>
					<itemlayout height="255">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>500</width>
							<height>210</height>
							<texture fallback="defaultpicture.png">$VAR[picposter]</texture>
							<aspectratio>keep</aspectratio>
							<animation effect="fade" end="50" condition="true">Conditional</animation>
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>500</width>
							<height>210</height>
							<texture>$VAR[icon]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="label">
							<left>0</left>
							<top>215</top>
							<width>500</width>
							<height>50</height>
							<font>font30</font>
							<align>center</align>
							<aligny>bottom</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</itemlayout>
					<focusedlayout height="255">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>500</width>
							<height>255</height>
							<texture>line.png</texture>
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>500</width>
							<height>255</height>
							<texture>colors/grey.png</texture>
							<animation effect="fade" end="50" condition="true">Conditional</animation>
							<visible>Control.HasFocus(61)</visible>
						</control>
						<control type="label">
							<left>0</left>
							<top>215</top>
							<width>500</width>
							<height>234</height>
							<font>font30</font>
							<align>center</align>
							<aligny>bottom</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>500</width>
							<height>210</height>
							<texture fallback="defaultpicture.png">$VAR[picposter]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>500</width>
							<height>210</height>
							<texture>$VAR[icon]</texture>
							<aspectratio>keep</aspectratio>
						</control>
					</focusedlayout>
				</control>
				<!-- WIDGETS -->
				<control type="fixedlist" id="612">
					<animation effect="slide" time="400" start="0,465" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
					<animation effect="slide" time="400" start="0,465" end="0,0" easing="inout" tween="cubic">Visible</animation>
					<animation effect="slide" time="400" start="0,0" end="0,465" easing="inout" tween="cubic">WindowClose</animation>
					<animation effect="slide" time="400" start="0,0" end="0,465" easing="inout" tween="cubic">Hidden</animation>
					<visible>String.IsEmpty(Control.GetLabel(9230))</visible>
					<left>515</left>
					<top>757</top>
					<width>1405</width>
					<height>320</height>
					<onup>61</onup>
					<ondown>9000</ondown>
					<onup>pageup</onup>
					<ondown>pageup</ondown>
					<orientation>horizontal</orientation>
					<viewtype>icon</viewtype>
					<content target="pictures" sortby="random" limit="7" condition="unfocus">$INFO[Container(61).ListItem.FolderPath]</content>
					<itemlayout width="200" height="250">
						<control type="group">
							<control type="image">
								<top>4</top>
								<left>4</left>
								<width>167</width>
								<height>250</height>
								<aspectratio aligny="bottom">keep</aspectratio>
								<animation effect="fade" end="50" condition="true">Conditional</animation>
								<texture fallback="default_picture.png" background="true">$VAR[picposter]</texture>
								<!-- <bordertexture border="-4">colors/black.png</bordertexture> -->
							</control>
						</control>
					</itemlayout>
					<focusedlayout width="200" height="250">
						<control type="group">
							<control type="image">
								<top>4</top>
								<left>4</left>
								<width>167</width>
								<height>250</height>
								<aspectratio aligny="bottom">keep</aspectratio>
								<texture fallback="default_picture.png" background="true">$VAR[picposter]</texture>
								<bordertexture border="-4">colors/white.png</bordertexture>
								<visible>Control.HasFocus(612)</visible>
							</control>
							<control type="image">
								<top>4</top>
								<left>4</left>
								<width>167</width>
								<height>250</height>
								<aspectratio aligny="bottom">keep</aspectratio>
								<animation effect="fade" end="50" condition="true">Conditional</animation>
								<texture fallback="default_picture.png" background="true">$VAR[picposter]</texture>
								<!-- <bordertexture border="-4">colors/black.png</bordertexture> -->
								<visible>!Control.HasFocus(612)</visible>
							</control>
						</control>
					</focusedlayout>
				</control>
				<!-- SCROLLBAR -->
				<control type="scrollbar" id="80">
					<include>scrollbar_vertical</include>
					<animation effect="slide" start="0,0" end="45,0" time="300" tween="sine" easing="inout" condition="Control.HasFocus(80)">conditional</animation>
					<left>-50</left>
					<top>40</top>
					<height>870</height>
					<onleft>9000</onleft>
					<onright>61</onright>
					<visible>true</visible>
				</control>
			</control>
		</control>
	</include>
</includes>
