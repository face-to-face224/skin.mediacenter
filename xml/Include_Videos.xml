			</control>
			<control type="image">
				<fadetime>450</fadetime>
				<left>20</left>
				<top>765</top>
				<width>460</width>
				<height>215</height>
				<aspectratio align="center" aligny="top">keep</aspectratio>
				<texture>$INFO[Container(512).ListItem.Art(clearlogo)]</texture>
				<visible>Control.HasFocus(512)</visible>
				<visible>String.IsEmpty(Container(512).ListItem.Art(clearart))</visible>
				<animation effect="slide" time="400" start="-600,0" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
				<animation effect="slide" time="400" start="-600,0" end="0,0" easing="inout" tween="cubic">Visible</animation>
				<animation effect="slide" time="400" start="0,0" end="-600,0" easing="inout" tween="cubic">WindowClose</animation>
				<animation effect="slide" time="400" start="0,0" end="-600,0" easing="inout" tween="cubic">Hidden</animation>>
			</control>
			<control type="image">
				<fadetime>450</fadetime>
				<left>20</left>
				<top>765</top>
				<width>460</width>
				<height>215</height>
				<aspectratio align="center" aligny="top">keep</aspectratio>
				<texture>$INFO[Container(512).ListItem.Art(boxfront)]</texture>
				<visible>Control.HasFocus(512)</visible>
				<animation effect="slide" time="400" start="-600,0" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
				<animation effect="slide" time="400" start="-600,0" end="0,0" easing="inout" tween="cubic">Visible</animation>
