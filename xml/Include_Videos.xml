	</include>	
	<include name="videobackground">
		<control type="group">
			<control type="multiimage">
				<visible>Control.HasFocus(512)</visible>
				<top>0</top>
				<left>0</left>
				<width>1920</width>
				<height>1080</height>
				<fadetime>350</fadetime>
				<imagepath>$VAR[videofanart]</imagepath>
				<aspectratio>stretch</aspectratio>
			</control>
			<include>gameblur</include>
			<control type="multiimage">
				<visible>!Control.HasFocus(512)</visible>
				<top>0</top>
				<left>0</left>
				<width>1920</width>
				<height>1080</height>
				<fadetime>350</fadetime>
				<imagepath>$VAR[videofanart]</imagepath>
				<aspectratio>stretch</aspectratio>
			</control>	
		</control>
	</include>
	<include name="videomultifanart">
		<visible>System.IdleTime(3)</visible>
		<control type="group">
			<include>gameblur</include>
			<control type="multiimage"> 				
				<width>1920</width>
				<height>1080</height>
				<timeperimage>900</timeperimage>
				<randomize>false</randomize>
				<fadetime>850</fadetime>
				<imagepath>$VAR[gamesarts]$INFO[ListItem.Label]</imagepath>
				<aspectratio>keep</aspectratio>
			</control>
		</control>
	</include>
	
	
	<include name="videolabel">
		<fadetime>450</fadetime>
		<width>500</width>
		<height>45</height>
		<font>font30</font>
		<align>left</align>
		<aligny>center</aligny>
	</include>
	<include name="videodetails">
		<fadetime>450</fadetime>
		<control type="grouplist">
			<itemgap>0</itemgap>
			<orientation>vertical</orientation>						
			<control type="label" id="711">
				<visible>!String.IsEmpty(ListItem.Year)</visible>
				<include>videolabel</include>
				<label>[COLOR orange]Ano de Lan√ßamento:[/COLOR] $INFO[ListItem.Year]</label>						
			</control>
			<control type="label">
				<visible>!String.IsEmpty(ListItem.Genre)</visible>
				<include>videolabel</include>
				<label>[COLOR orange]Genero:[/COLOR] $INFO[ListItem.Genre]</label>							
			</control>
			<control type="label">
				<visible>!String.IsEmpty(ListItem.Studio)</visible>
				<include>videolabel</include>
				<label>[COLOR orange]Produtora:[/COLOR] $INFO[ListItem.Studio]</label>							
			</control>
		</control>
	</include>
	
	
	
	
	<!-- By Sagrath -->
</includes>