<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- MediaCenter 2020 -->
	<!-- #################### BLUR BACKGROUND #################### -->
	<include name="videoblur">
		<!-- Colorbox Daemon -->
		<control type="multiimage" id="7975">
			<left>-2160</left>
			<width>1</width>
			<height>1</height>
			<imagepath>$VAR[videofanart]</imagepath>
		<visible>System.HasAddon(script.colorbox)</visible>
		</control>
		<!-- Background Fanart -->
		<control type="image">
			<width>1920</width>
			<height>1080</height>
			<fadetime>100</fadetime>
			<aspectratio scalediffuse="false">stretch</aspectratio>
			<texture>$VAR[videofanart]</texture>
		</control>
		<!-- Colorbox Blur Image -->
		<control type="image">
			<width>1920</width>
			<height>1080</height>
			<fadetime>100</fadetime>
			<aspectratio scalediffuse="false">stretch</aspectratio>
			<texture diffuse="background-diffuse.png">$INFO[Window(home).Property(ImageFilterFIVE)]</texture>
		</control>
	</include>
	
	<!-- ARTES PARA VIDEOS -->
