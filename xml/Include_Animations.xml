		<animation effect="fade" delay="450" start="0" end="100" time="450" condition="true">Conditional</animation>
	</include>
	
	<include name="side_right_hidden">
		<animation effect="slide" start="0" end="-100" time="300" tween="sine" easing="inout" condition="Control.HasFocus(7000)">Conditional</animation>
		<animation effect="slide" start="0" end="100" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(7999)">Conditional</animation>
	</include>
