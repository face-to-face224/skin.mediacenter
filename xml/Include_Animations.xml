	<include name="top_hidden">
		<animation effect="slide" start="0,0" end="0,80" time="100" easing="inout" condition="[Control.HasFocus(701) | Control.HasFocus(702) | Control.HasFocus(703) | Control.HasFocus(704) | Control.HasFocus(705)]">Conditional</animation>
