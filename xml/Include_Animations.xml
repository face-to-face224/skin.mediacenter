	<include name="fademenu">
		<animation effect="fade" end="50" condition="true">Conditional</animation>
	</include>
	
	<include name="home_fade">
		<animation effect="fade" delay="1000" start="0" end="100" time="500" condition="Control.HasFocus(7001) | Control.HasFocus(7002) | Control.HasFocus(7003) | Control.HasFocus(7004) | Control.HasFocus(7005) | Control.HasFocus(8001) | Control.HasFocus(8003)">True</animation>
	</include>

