<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- WIDGETS MUSIC -->
	<!-- #################### BLUR BACKGROUND #################### -->
	<include name="musicblur">
		<!-- Colorbox Daemon -->
		<control type="multiimage" id="7975">
			<left>-2160</left>
			<width>1</width>
			<height>1</height>
			<imagepath>$VAR[musicfanart]</imagepath>
		<visible>System.HasAddon(script.colorbox)</visible>
		</control>
		<!-- Background Fanart -->
		<control type="image">
			<width>1920</width>
			<height>1080</height>
			<fadetime>100</fadetime>
			<aspectratio scalediffuse="false">stretch</aspectratio>
			<texture>$VAR[fanart]</texture>
		</control>
		<!-- Colorbox Blur Image -->
		<control type="image">
			<width>1920</width>
			<height>1080</height>
			<fadetime>100</fadetime>
			<aspectratio scalediffuse="false">stretch</aspectratio>
			<texture diffuse="background-diffuse.png">$INFO[Window(home).Property(ImageFilterFIVE)]</texture>
		</control>
	</include>
	
	<include name="musicbackground">
		<control type="group">
			<control type="multiimage">
				<visible>Control.HasFocus(812)</visible>
				<top>0</top>
				<left>0</left>
				<width>1920</width>
				<height>1080</height>
				<fadetime>350</fadetime>
				<imagepath>$VAR[musicfanart]</imagepath>
				<aspectratio>stretch</aspectratio>
			</control>	
			<include>musicblur</include>			
			<control type="multiimage">
				<visible>!Control.HasFocus(812)</visible>
				<top>0</top>
				<left>0</left>
				<width>1920</width>
				<height>1080</height>
				<fadetime>350</fadetime>
				<imagepath>$VAR[musicfanart]</imagepath>
				<aspectratio>stretch</aspectratio>
			</control>			
		</control>
	</include>
	
	<include name="musiclogoandbanner">		
		<control type="group">
			<control type="image" id="9229">
				<fadetime>450</fadetime>
				<left>20</left>
				<top>865</top>
				<width>460</width>
				<height>215</height>
				<texture>$VAR[musiclogo]</texture>
				<visible>!Control.HasFocus(812)</visible>
				<aspectratio align="center" aligny="top">keep</aspectratio>				
				<animation effect="slide" time="400" start="-600,0" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
				<animation effect="slide" time="400" start="-600,0" end="0,0" easing="inout" tween="cubic">Visible</animation>
				<animation effect="slide" time="400" start="0,0" end="-600,0" easing="inout" tween="cubic">WindowClose</animation>
				<animation effect="slide" time="400" start="0,0" end="-600,0" easing="inout" tween="cubic">Hidden</animation>
			</control>
			<control type="image">
				<fadetime>450</fadetime>
				<left>20</left>
				<top>865</top>
				<width>460</width>
				<height>215</height>
				<aspectratio align="center" aligny="top">keep</aspectratio>
				<texture>$VAR[musiclogo]</texture>
				<visible>Control.HasFocus(812)</visible>
				<animation effect="slide" time="400" start="-600,0" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
				<animation effect="slide" time="400" start="-600,0" end="0,0" easing="inout" tween="cubic">Visible</animation>
				<animation effect="slide" time="400" start="0,0" end="-600,0" easing="inout" tween="cubic">WindowClose</animation>
				<animation effect="slide" time="400" start="0,0" end="-600,0" easing="inout" tween="cubic">Hidden</animation>>
			</control>
			<control type="image">
				<fadetime>450</fadetime>
				<left>500</left>
				<top>0</top>
				<width>1470</width>
				<height>620</height>
				<texture>$VAR[musicbanner]</texture>
				<visible>Control.HasFocus(812)</visible>
				<aspectratio align="left" aligny="top">keep</aspectratio>				
				<animation effect="slide" time="400" start="1500,0" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
				<animation effect="slide" time="400" start="1500,0" end="0,0" easing="inout" tween="cubic">Visible</animation>
				<animation effect="slide" time="400" start="0,0" end="1500,0" easing="inout" tween="cubic">WindowClose</animation>
				<animation effect="slide" time="400" start="0,0" end="1500,0" easing="inout" tween="cubic">Hidden</animation>
			</control>
		</control>
	</include>	
	
	<include name="musicdetails">
		<fadetime>450</fadetime>
		<control type="grouplist">
			<visible>!Container.HasFiles</visible>
			<itemgap>0</itemgap>
			<orientation>vertical</orientation>					
			<control type="label">
				<visible>!String.IsEmpty(ListItem.Year)</visible>
				<height>45</height>
				<font>font_plot</font>
				<align>center</align>
				<aligny>center</aligny>
				<label>[COLOR orange]Ano de Lan√ßamento:[/COLOR] $INFO[ListItem.Year]</label>
				<include>labelcolor</include>
			</control>
			<control type="label">
				<visible>!String.IsEmpty(ListItem.Genre)</visible>
				<height>45</height>
				<font>font_plot</font>
				<align>center</align>
				<aligny>center</aligny>
				<label>[COLOR orange]Genero:[/COLOR] $INFO[ListItem.Genre]</label>	
				<include>labelcolor</include>
			</control>
			<control type="textbox">
				<visible>Container.Content(artists)</visible>
				<height>254</height>
				<font>font_plot</font>
				<label>$VAR[plot]</label>
				<include>labelcolor</include>
				<align>justify</align>
			</control>
			<control type="textbox">
				<visible>Container.Content(albums)</visible>
				<height>200</height>
				<font>font_plot</font>
				<label>$VAR[plot]</label>
				<include>labelcolor</include>
				<align>justify</align>
			</control>
		</control>
	</include>
	<!-- By Sagrath -->
</includes>
